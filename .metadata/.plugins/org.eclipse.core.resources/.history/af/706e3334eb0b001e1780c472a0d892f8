			i = 수;
		} else if (avr > 80) {
			i = 미;
		} else if ( avr > 70 ) {
			i = 양;
		} else ( avr > 60 ) { 
			i = 가;
		}
		System.out.println("성적은 : " + i + "입니다");
		
		
			
	}

}
